<h2>Your intake of today:</h2>

<%# Intakes %>
<div class="standard-card">
  <div id="user-nutritionfacts">
      <div class="circle-and-number-container">
        <div class="circle">
          <div class="white-inner-circle"></div>
        </div>
        <p class="nutrition-data"><%= %>Calories</p>
      </div>
      <div class="circle-and-number-container">
        <div class="circle">
          <div class="white-inner-circle"></div>
        </div>
        <p class="nutrition-data"><%= %>Fats</p>
      </div>
      <div class="circle-and-number-container">
        <div class="circle">
          <div class="white-inner-circle"></div>
        </div>
        <p class="nutrition-data"><%= %>Satu-fats</p>
      </div>
      <div class="circle-and-number-container">
        <div class="circle">
          <div class="white-inner-circle"></div>
        </div>
        <p class="nutrition-data"><%= %>Carbs</p>
      </div>
      <div class="circle-and-number-container">
        <div class="circle">
          <div class="white-inner-circle"></div>
        </div>
        <p class="nutrition-data"><%= %>Protein</p>
      </div>
    </div>
</div>

<%# Next Meal %>
<div class="standard-card">
  Meal
</div>

<%# Calendar %>
<div class="standard-card">
  <%= week_calendar(number_of_weeks: 2) do |date| %>
    <%= date %>
  <% end %>
</div>

<%# Weight history %>
<div class="standard-card">
  <div id="user-weights">
    <h6>Weight History</h6>
    <%= line_chart WeightHistory.group_by_day(:created_at, range: 1.weeks.ago..Time.now, expand_range: true, current: false).count(:weight) %>
  </div>
</div>
