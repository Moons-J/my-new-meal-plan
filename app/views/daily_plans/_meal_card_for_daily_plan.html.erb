<%# sidescroll class only used for the side scroll effect in daily meal plan creation %>
<div class="card-meal-for-daily-plan standard-card sidescroll"
  data-action="click->select-meal-for-daily-meal#select"
  data-select-meal-for-daily-meal-target="card"
  data-live-update-nutritions-target="mealCard"
  data-mealid="<%= meal.id %>">
  <%# Meal image %>
  <% if meal.photo.key.nil? %>
    <%= image_tag "default_recipe.png" %>
  <% else %>
    <%= cl_image_tag meal.photo.key.to_s %>
  <% end %>
  <div class="meal-info">
    <h5 class="mb-0"><%= meal.name %></h5>
  </div>
  <div class="meal-nutritionfacts-create pt-2">
    <div class="circle-and-number-container">
      <div>
        Cals
      </div>
      <p class="nutrition-data" id="calories"><%= meal.calculate_nutrition("calories") %></p>
    </div>
    <div class="circle-and-number-container">
      <div>
        Fats
      </div>
      <p class="nutrition-data" id="fats"><%= meal.calculate_nutrition("fats") %></p>
    </div>
    <div class="circle-and-number-container">
      <div>
        Satu
      </div>
      <p class="nutrition-data" id="satu-fats"><%= meal.calculate_nutrition("satu-fats") %></p>
    </div>
    <div class="circle-and-number-container">
      <div>
        Carbs
      </div>
      <p class="nutrition-data" id="carbs"><%= meal.calculate_nutrition("carbs") %></p>
    </div>
    <div class="circle-and-number-container">
      <div>
        Prot
      </div>
      <p class="nutrition-data" id="protein"><%= meal.calculate_nutrition("protein") %></p>
    </div>
  </div>
</div>
