<div class="daily-meal-card-button-holder" data-controller="swipe">
  <div class="standard-card" style="transition-duration: 0.7s;"
    data-action="touchstart->swipe#swipeCard touchend->swipe#stopSwipeCard"
    data-swipe-target="card">
    <a class="" href="<%= daily_plan_path(plan) %>" style="text-decoration: none; width: 100%;">
      <div class="plan d-flex justify-content-between">
        <div class="plan-info">
          <h6><%= plan.name %></h6>
        </div>
        <div>
          <% if plan.photo.key.nil? %>
            <img src="https://www.gutekueche.at/storage/media/recipe/134629/spaghetti-al-pomodoro.jpg" alt="">
          <% else %>
            <%= cl_image_tag plan.photo.key.to_s %>
          <% end %>
        </div>
      </div>
    </a>
  </div>
  <%= link_to(daily_plan_path(plan), data: {turbo_method: :delete, swipe_target: 'button'}, class: 'button-rounded-red hidden button-position') do %>
    <i class="fa-regular fa-trash-can" style="color: #ffffff;"></i>
  <% end %>
</div>
