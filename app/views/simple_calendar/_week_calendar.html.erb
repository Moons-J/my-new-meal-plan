<div class="simple-calendar">
  <div class="calendar-heading">
    <span class="calendar-title d-flex">
      <span>
        <%= t('simple_calendar.week.year', default: 'Week') %>
        <%= calendar.week_number %>
        <% if calendar.number_of_weeks > 1 %>
          - <%= calendar.end_week %>
        <% end %>
      </span>
      <span>
        <%= start_date.year %>
      </span>
    </span>

    <div class="d-flex">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
    </div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day), data: { value: "#{day}",  action: "click->planning-calendar#show" } do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
