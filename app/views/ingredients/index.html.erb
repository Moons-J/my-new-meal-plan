<h2>Ingredients</h2>

<div data-controller="search-element">
  <%# Search form %>
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: ingredients_path, method: :get, class: "search-form d-flex justify-content-between", data: {
        search_element_target: "form",
        action: "keyup->search-element#update"
      } do %>
        <%= text_field_tag :query,
              params[:query],
              class: "standard-input border-0 flex-grow-1",
              data: { search_element_target: "input" },
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "button-standard border-0" %>
      <% end %>
    </div>
  </div>

  <div class="d-flex">
    <%= link_to "Add", new_ingredient_path, class: "button-standard" %>
  </div>

  <%# Ingredients list %>
  <%= render "ingredients_list", ingredients: @ingredients %>
</div>
