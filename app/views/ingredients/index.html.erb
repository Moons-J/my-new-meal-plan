<h1 class="text-center">Ingredients</h1>
<div class="ingredient-card standard-card d-flex justify-content-between align-items-center shadow p-3 my-3 bg-white rounded">
  <h2 class="mb-0">Apples</h2>
  <i class="fa-regular fa-pen-to-square"></i>
</div>
<% @ingredients.each do |ingredient| %>
<div class="ingredient-card standard-card d-flex justify-content-between align-items-center shadow p-3 my-3 bg-white rounded">
  <h2 class="mb-0"><%= ingredient.name %></h2>
  <%= link_to "#" do %>
    <i class="fa-regular fa-pen-to-square"></i>
  <% end %>
</div>
<% end %>
