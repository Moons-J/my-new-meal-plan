<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :first_name,
                  required: true %>
      <%= f.input :last_name,
                  required: true %>
    <%= f.input :user_name,
                  required: true %>
      <%= f.input :birthday,
                  required: true, input_html: {class: "my-1"} %>
      <%= f.input :height,
                  hint: "In centimeters",
                  required: true %>
      <%= f.input :weight, hint: "In kilograms", required: true %>
      <%= f.input :active_level,
                  hint: "From 1 (no exercise) to 5 (excercise 7 days in a week), what is your weekly activity level?",
                  required: true,
                  input_html: { type: "number", min: 1, max: 5, step: 1 } %>
      <%= f.input :phase,
                  as: :radio_buttons,
                  hint: "Do you want to lose, maintain or gain weight?",
                  collection: ["lose", "maintain", "gain"],
                  required: true %>
      <%= f.input :sex,
                  hint: "the 'rather not say' option will give you a calculation that is between female and male.",
                  as: :radio_buttons,
                  collection: ["female", "male", "rather not say"],
                  required: true %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "button-standard mb-2" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
