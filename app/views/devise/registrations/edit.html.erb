
<header class="d-flex justify-content-between">
  <div>
    <h4>Information</h4>
    <p>(Editable)</p>
  </div>
  <div>
    <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete }, class: 'button-standard' %>
  </div>
</header>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="standard-card user-info">
      <h6>Personal information:</h6>
      <p class="small">We will help you with your nutrition if filled in.</p>
      <%= f.input :birthday,
                  required: false %>
      <%= f.input :weight,
                  hint: "Please input a number with a single decimal place.",
                  required: false %>
      <%= f.input :height,
                  hint: "In centimeters",
                  required: false %>
      <%= f.input :exercise_level,
                  hint: "From 1 (no excersice) to 5 (very active), what is your weekly activity level?",
                  required: false %>
    </div>
    <div class="standard-card user-info">
      <h6>User information:</h6>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>
  </div>
<div class="button-flex-seperator">
  <div class="form-actions">
    <%= f.button :submit, "Save changes", {class: 'button-standard'} %>
  </div>
  <% end %>
  <%= link_to "Back", :back, {class: 'button-standard'}%>
</div>
<div class="standard-card user-cancel-styling">
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: 'button-delete', method: :delete %></div>
</div>
