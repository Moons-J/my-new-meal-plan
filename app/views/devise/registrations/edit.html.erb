<h4>Information</h4>
<p>(Editable)</p>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="standard-card user-info">
      <h6>Personal information:</h6>
      <p class="small">We will help you with your nutrition if filled in.</p>
      <%= f.input :birthday,
                  required: false, input_html: {class: "col-12"} %>
      <%= f.input :weight,
                  hint: "Please input a number with a single decimal place.",
                  required: false %>
      <%= f.input :height,
                  hint: "In centimeters",
                  required: false %>
      <%# <%= f.input :intensity,
                  hint: "What is your weekly intensity level",
                  required: false %>
    </div>
    <div class="standard-card user-info">
      <h6>User information:</h6>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>
  </div>
<div class="d-flex">
  <div class="form-actions">
    <%= f.button :submit, "Update", {class: 'button-standard'} %>
  </div>
<% end %>
<%= link_to "Back", :back, {class: 'button-standard'}%>
</div>
<div class="standard-card d-flex">
  <h6 class="space">Cancel my account</h6>
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", class: 'button-standard' }, method: :delete %></div>
</div>
