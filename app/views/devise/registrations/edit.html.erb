<header class="d-flex justify-content-between">
  <div>
    <h4>Account information</h4>
    <p>(Editable)</p>
  </div>
  <div>
    <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete }, class: 'button-standard' %>
  </div>
</header>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="standard-card user-info">
      <h5>Personal information:</h5>
      <p class="small">We will help you with your nutrition if filled in.</p>
      <%= f.input :first_name,
                  required: false %>
      <%= f.input :last_name,
                  required: false %>
      <%= f.input :birthday,
                  required: false %>
      <%= f.input :height,
                  hint: "In centimeters",
                  required: false %>
      <%= f.input :active_level,
                  hint: "From 1 (no exercise) to 5 (excercise 7 days in a week), what is your weekly activity level?",
                  required: false,
                  input_html: { type: "number", min: 1, max: 5, step: 1 } %>
      <%= f.input :phase,
                  as: :radio_buttons,
                  hint: "Do you want to lose, maintain or gain weight?",
                  collection: ["lose", "maintain", "gain"],
                  required: false %>
      <%= f.input :sex,
                  hint: "the 'rather not say' option will give you a calculation that is between female and male.",
                  as: :radio_buttons,
                  collection: ["female", "male", "rather not say"],
                  required: false %>
    </div>
  <div class="form-inputs">
    <div class="standard-card user-info">
      <h5>User information:</h5>
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :user_name,
                  required: false %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <h5>Change password:</h5>
      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
    </div>
  </div>
<div class="button-flex-seperator">
  <div class="form-actions">
    <%= link_to :back, class: 'btn button-standard' do %>
      <i class="fa-solid fa-arrow-left" style="color: #ffffff;"></i>
    <% end %>

    <%= f.button :submit, class: 'button-standard' do %>
      <i class="fa-regular fa-floppy-disk" style="color: #ffffff;"></i>
    <% end %>
  </div>
</div>
<% end %>
<div class="standard-card user-cancel-styling">
  <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, class: 'button-delete', method: :delete %></div>
</div>
